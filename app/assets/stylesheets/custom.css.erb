.content { padding: 80px 0; }
.content-limit { max-width: 1440px; margin: 0 auto; }

img.arrow-down { width: 32px; height: auto; }
img.icon-facebook { width: 9px; height: auto; }

a.tilted { font-weight: 600; font-style: italic; }
a.corkscrew { position: relative; padding-left: 30px; }
a.corkscrew:before { content: ''; position: absolute; display: block; left: 0; width: 20px; height: 28px; background-image: url('<%= asset_path 'corkscrew.png' %>'); background-repeat: no-repeat; background-size: 100% auto; }
a.tilted.corkscrew.toggle-content { color: #FFF; float: right; margin-top: 15px; }

section.title { background-color: #dad3c9; }
section.title h1, section.title h2, section.title h3, section.title h4, section.title h5, section.title h6 { margin: 10px 0; }
section.title.texture { color: #FFF; background-image: url('<%= asset_path 'title-texture.jpg' %>'); background-size: 100% 100%; }

.divider { position: relative; border-bottom: 1px solid; width: calc(100% - 30px); margin: 40px auto; margin-left: 5px; }
.divider span { background-image: url('<%= asset_path 'divider.png' %>'); background-size: 28px auto; background-position: center center; width: 50px; height: 20px; position: absolute; left: 50%; margin-left: -25px; background-repeat: no-repeat; top: 50%; margin-top: -10px; }
.divider.grey { color: #c6bfb6; }
.divider.grey span { background-image: url('<%= asset_path 'divider-grey.png' %>'); }

@media(min-width: 768px) {
	.padding-odd-even:nth-child(odd) { padding-right: 8.33%; }
	.padding-odd-even:nth-child(even) { padding-left: 8.33%; }
}

/* CUSTOM FOR PRODUCTS IN HOME */
section.products>div:nth-child(even) .display-image-container { float: left; text-align: right; }

/* CUSTOM FOR NEWSLETTER SECTION IN HOME */
.newsletter-form-container {max-width: 465px; padding-right: 15px;}
.map-home { width: 50%; height: 100%; position: absolute; top: 0; left: 50%; z-index: 99; }
.map-home>div { height: 100%; }
@media(max-width: 991px) {
	.newsletter-form-container { max-width: 50%; }
}
@media(max-width: 767px) {
	.map-home { position: relative; width: 100%; left: 0; height: 250px; margin-bottom: -82px; }
	.newsletter-form-container { max-width: 100%; padding-right: 0; padding-bottom: 40px; }
}

/* CUSTOM FORM ADMIN */
body.admin section.content td { padding: 5px; }
body.admin section.content td:first-of-type { padding-left: 0; }
body.admin section.content td:last-of-type { padding-right: 0; }

/* CUSTOM MAP LOCATION IMAGE */
@media(max-width: 991px) {
	img[src*="cellar-location-map"] { width: 250px; }
}

/* RESPONSIVE */
@media(max-width: 991px) {
	section.products>div:nth-child(even) .display-image-container { float: left; }
	img.display-image { height: auto; width: auto; max-width: 150px; max-height: 330px; }
	.display-image-container { float: right; width: auto; text-align: center; }
	.display-caption { width: 100%; text-align: left; padding: 0; display: block; }
	.display .container>div { height: auto; }
}

/* REQUEST-CONTENT */
.request-content>span:not(.active) {display: none;}

/* SWIPER */
.swiper-button-next,.swiper-button-prev { background-image: none; color: #FFF; font-size: 45px; line-height: 45px; }
.swiper-button-next { text-align: right; }
.swiper-pagination-bullet { opacity: 0.5; }
.swiper-pagination-bullet-active { background: #FFF; opacity: 1; }
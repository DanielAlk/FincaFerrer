section.main-image-content { height: 100vh; padding: calc(50vh - 80px) 0; text-align: center; background-position: center center; background-size: cover; }
section.main-image-content>img { width: 380px; height: auto; display: block; margin: 30px auto; }

body.admin section.main-image-content { padding: 120px 0 40px; }

@media(max-width: 767px) {
	section.main-image-content>img { max-width: 280px; }
	section.main-image-content { padding: calc(50vh - 75px) 0; }
}
section.main-image {height: 100px;background-position: center center; background-size: cover; }
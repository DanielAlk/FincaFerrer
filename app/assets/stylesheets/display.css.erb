.display { color: #FFF; padding: 110px; }
.display .container>div { height: 430px; }
.display-image-container { float: right; width: 50%; padding: 0 50px; }
img.display-image { height: 100%; width: auto; }
.display-caption { width: 50%; display: table; padding-right: 20px; }
.display-caption-content { display: table-cell; vertical-align: middle; }
.display-caption p { margin: 40px 0; }

.display-mini { color: #FFF; font-size: 0.8em; padding: 30px 0; margin: 0 auto; }
.display-mini-image-container { float: right; height: 250px; }
.display-mini-image { height: 100%; width: auto; }
.display-mini-caption { display: table; height: 250px; }
.display-mini-caption-content { display: table-cell; vertical-align: middle; padding-right: 30px; max-width: 400px; }
.display-mini a.tilted { font-size: 1.2em; }
.display-mini a.tilted[href^=javascript] { color: #C6BFB6; cursor: not-allowed; }
.display-mini a.tilted[href^=javascript]:hover,.display-mini a.tilted[href^=javascript]:focus {text-shadow: none;}
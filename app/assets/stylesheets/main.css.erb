body { font-family: 'Crimson Text', serif; color: #626366; font-size: 18px; }

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 { font-weight: 400; margin-top: 0; }
h1, .h1, h2, .h2, h3, .h3 { margin-bottom: 20px; }
h4, .h4, h5, .h5, h6, .h6 { margin-bottom: 15px; }
h2, .h2 { font-size: 45px; }

p, .p { margin: 0 0 30px; }
b, strong { font-weight: 600; }
.bold { font-weight: 800; }

a { color: inherit; }
a:focus { outline: none; }
a:hover, a:focus { color: inherit; text-decoration: none; text-shadow: 0px 0px 15px; }
a.btn { text-shadow: none; }

.text { font-size: 0.8em; }
.font-crimson { font-family: 'Crimson Text', serif; }

.mustard { background-color: #d8b153; color: #FFF; }
.grey { background-color: #afa6a3; color: #FFF; }

.line-1 { line-height: 1; }
.line-2 { line-height: 2; }

.relative { position: relative; }

@media(max-width: 767px) {
	.text-center-xs { text-align: center; }
}

/* TALL */
@media(min-width: 768px) {
	.tall-sm-495 { height: 495px; }
}
@media(min-width: 992px) {
	.tall-md-auto { height: auto; }
}

/* DIVIDED */
.divided { position: relative; }
.divided:before, .divided:after { content: ' '; display: table; }
.divided:after { clear: both; }
.division { float: left; }
.divide-xs-1 .division { width: 100%; }
.divide-xs-2 .division { width: 50%; }
.divide-xs-4 .division { width: 25%; }

@media(min-width: 768px) {
	.divide-sm-1 .division { width: 100%; }
	.divide-sm-2 .division { width: 50%; }
	.divide-sm-4 .division { width: 25%; }
}

@media(min-width: 992px) {
	.divide-md-1 .division { width: 100%; }
	.divide-md-2 .division { width: 50%; }
	.divide-md-4 .division { width: 25%; }
}

/* PULLS */
.pull-none-xs { float: none; }
.pull-left-xs { float: left; }
.pull-right-xs { float: right; }
@media(min-width: 768px) {
	.pull-none-sm { float: none; }
	.pull-left-sm { float: left; }
	.pull-right-sm { float: right; }
}
@media(min-width: 992px) {
	.pull-none-md { float: none; }
	.pull-left-md { float: left; }
	.pull-right-md { float: right; }
}
@media(min-width: 1200px) {
	.pull-none-lg { float: none; }
	.pull-left-lg { float: left; }
	.pull-right-lg { float: right; }
}

/* SPACES */
.space-xs-S-0 { margin-bottom: 0; }

.space-xs-S-30 { margin-bottom: 30px; }
.space-xs-S-50 { margin-bottom: 50px; }

.space-xs-E-20 { margin-right: 20px; }
.space-xs-E-40 { margin-right: 40px; }
@media(min-width: 768px) {
	.space-sm-S-0 { margin-bottom: 0; }

	.space-sm-E-20 { margin-right: 20px; }
	.space-sm-E-40 { margin-right: 40px; }
}
@media(min-width: 992px) {
	.space-md-S-0 { margin-bottom: 0; }

	.space-md-E-20 { margin-right: 20px; }
	.space-md-E-40 { margin-right: 40px; }
}

.inspace-xs-N-0 {padding-top: 0!important;}
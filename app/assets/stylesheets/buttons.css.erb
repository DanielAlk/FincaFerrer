.btn { text-transform: uppercase; border-radius: 0; padding: 6px 20px; font-size: 12px; }
.btn:focus, .btn:active:focus, .btn.active:focus { outline: none; }

.btn-lg, .btn-group-lg > .btn { font-size: 16px; padding: 8px 22px; }

.btn-default { background-color: transparent; color: #FFF; border-color: #FFF; }
.btn-default:hover, .btn-default:focus, .btn-default:active, .btn-default.active, .open > .btn-default.dropdown-toggle { border-color: #FFF; background-color: rgba(255, 255, 255, 0.5); color: #FFF; }

.btn-primary { background-color: transparent; color: #626366; border-color: #626366; }
.btn-primary:hover, .btn-primary:focus, .btn-primary:active, .btn-primary.active, .open > .btn-primary.dropdown-toggle { border-color: #626366;background-color: rgba(98, 99, 102, 0.3); color: #626366;}
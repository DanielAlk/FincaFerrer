.split { position: relative; padding-left: 50%; }
.split-image { position: absolute; width: 50%; height: 100%; left: 0; top: 0; background-position: center center; background-size: cover; overflow: hidden; }
.split-content { padding: 80px; }

.split-inverted { position: relative; padding-right: 50%; }
.split-inverted .split-image { left: auto; right: 0; }

@media(max-width: 991px) {
	.split { padding-left: 0; }
	.split-image { width: 100%; z-index: 0; }
	.split-content { position: relative; background-color: rgba(255,255,2555,0.9); }
	.split-inverted { padding-right: 0; }
}

@media(max-width: 767px) {
	.split-content { padding: 30px 15px; font-size: .9em; }
}

@media(min-width: 768px) {
	.split-50 {
		&:before, &:after { content: ' '; display: table; }
		&:after { clear: both; }
		&>div { float: left; width: 50%; }
		.split-right { padding: 80px;
			@media(max-width: 1199px) { padding: 40px; font-size: 18px;	 }
			@media(max-width: 991px) { padding: 20px; font-size: 16px;	 }
		}
	}
}
@media(max-width: 767px) {
	.split-50 {
		.split-right { padding: 15px; font-size: 16px; }
	}
}

.cover-xs-320 { height: 320px; background-size: cover; background-position: center center; }
@media(min-width: 768px) {
	.cover-sm-768 { height: 768px; background-size: cover; background-position: center center; }
}
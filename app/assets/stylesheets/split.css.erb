.split { position: relative; padding-left: 50%; }
.split-image { position: absolute; width: 50%; height: 100%; left: 0; top: 0; background-position: center center; background-size: cover; }
.split-content { padding: 80px; }

.split-inverted { position: relative; padding-right: 50%; }
.split-inverted .split-image { left: auto; right: 0; }
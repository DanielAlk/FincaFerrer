.form-horizontal .form-group { margin-left: -5px; margin-right: -5px; }
.form-horizontal .form-group>div { padding-left: 5px; padding-right: 5px; }

.form-group { margin-bottom: 10px; }

.form-control { height: 31px; border: none; border-radius: 0; }
.form-control-lg { height: 39px; font-size: 16px; }
textarea.form-control { height: auto; resize: none; }

form div.field, form div.actions { margin-bottom: 10px; }
form div.actions { padding-top: 10px; }
form div.field label { margin-bottom: 0; }
form div.field input, form div.field textarea, form div.field select {
	display: block;
  width: 100%;
  padding: 6px 12px;
  font-size: 14px;
  line-height: 1.428571429;
  color: #555555;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 4px;
  @extend .form-control;
}

label.error { font-weight: normal; color: #D73F22; font-size: 0.8em; }
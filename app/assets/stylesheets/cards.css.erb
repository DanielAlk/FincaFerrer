.card-image-container { position: relative; padding-bottom: 71.66%; }
.card-image { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
.card-text { font-size: 0.8em; margin-bottom: 20px; padding: 0 10px; }
.card-title { font-style: italic; margin: 20px 0; }
.card-caption { padding: 0 10px 20px; text-align: center; }
.card { margin-bottom: 30px; }

.card-mini { font-size: 0.8em; }
.card-mini .card-mini-image-container, .card-mini .card-mini-caption { height: 220px; }
.card-mini-image-container { float: left; margin-right: 15px; }
.card-mini-image { height: 100%; width: auto; }
.card-mini-caption { display: table; }
.card-mini-caption-content { display: table-cell; vertical-align: middle; }
.card-mini a.more { font-size: 1.2em; }

@media(max-width: 767px) {
	.card-mini { width: 270px; margin: 0 auto; }
}
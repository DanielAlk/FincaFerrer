footer { background-color: #dad3c9; font-size: 0.8em; }
footer .form-control { background-color: #f0ede9; }
footer .container {padding-top: 60px;padding-bottom: 60px;}
footer .brand img { width: 237px; height: auto; }

.footer-data { margin-top: 40px; padding-right: 20px; }
.footer-data>li:not(:last-child) { margin-bottom: 40px; }
.footer-data>li { position: relative; padding-left: 25px; }
.footer-data>li>img { position: absolute; left: 0; }
.footer-data>li:nth-child(1)>img { margin-top: 9px; }
.footer-data>li:nth-child(2)>img { margin-top: -2px; margin-left: 1px; }
.footer-data>li:nth-child(3)>img { margin-top: 5px; margin-left: -1px; }
.footer-social>img { float: left; margin-right: 20px; }
.footer-social p { line-height: 1.2; max-width: 170px; margin-bottom: 25px; }
.footer-social { padding-top: 80px; }

.footer-footer { text-align: center; background-color: #000; color: #FFF; font-size: 0.7em; padding: 15px 0 30px; }
.footer-footer a { margin-left: 5px; }
.footer-footer img { width: 106px; height: auto; }
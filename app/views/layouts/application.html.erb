<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
	<%= render 'layouts/head' %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= 'admin' if admin_signed_in? %>">
<%= render 'layouts/navigation' %>
<div class="page-container">
	<%= render 'layouts/main_image' %>
	<%= yield %>
	<%= render 'layouts/footer' %>
	<%= render 'modals/generic' %>
	<%= render 'modals/notice' %>
</div>
<script>
  $(function() {
  	Utils.navigation();
  	<%= yield :extra_js if content_for? :extra_js %>
  });
</script>
<%= yield :extra_script if content_for? :extra_script %>
</body>
</html>
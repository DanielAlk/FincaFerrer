<!DOCTYPE html>
<html lang="es">
<head>
	<%= render 'layouts/head' %>
  <%= csrf_meta_tags %>
</head>
<body class="admin">
<%= render 'layouts/navigation' %>
<%= render 'layouts/main_image' %>
<section class="content">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<%= yield %>
			</div>
		</div>
	</div>
</section>
<%= render 'layouts/footer' %>
<script>
  $(function() {
  	<%= yield :extra_js if content_for? :extra_js %>
    <% if notice.present? %>
      alert('<%= notice %>');
    <% end %>
    <% if alert.present? %>
      alert('<%= alert %>');
    <% end %>
  });
</script>
</body>
</html>

					<%= link_to 'Ver más.', '#', class: 'tilted corkscrew' %>
					<div class="divider"><span style="background-color:#ecc2ba"></span></div>
				</div>
			</div>
		</div>
	</article>
	<article class="display" style="background-color:#c3a01c">
		<div class="container">

<h1>Listing Articles</h1>

<ul class="list-unstyled model-list">
  <% @articles.each do |article| %>
    <li>
      <span style="width: calc(100% - 115px)"><%= article.title %></span>
      <span class="control">
        <%= link_to article, class: 'open' do %>
          <i class="fa fa-border fa-folder-open"></i>
        <% end %>
        <%= link_to edit_article_path(article), class: 'edit' do %>
          <i class="fa fa-border fa-edit"></i>
        <% end %>
        <%= link_to article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'trash' do %>
          <i class="fa fa-border fa-trash"></i>
        <% end %>
      </span>
    </tr>
  <% end %>
</ul>

<%= link_to 'New Article', new_article_path %>
